<%= render '/shared/error', object: @post %>

<div class="card">
  <div class="card-body">
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 5, class: 'form-control' %>
      </div>
      <div class="form-group">
        <div class="mb-1">Categories</div>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <div class="form-check form-check-inline">
            <%= cb.label(class: "form-check-label") {cb.check_box(class: "form-check-input") + cb.text} %>
          </div>
        <% end %>
      </div>
      <%= f.submit @post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>