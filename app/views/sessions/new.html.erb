<%= render 'shared/content_title', title: 'Log in' %>

<div class="card">
  <div class="card-body">
    <%= form_with(url: '/login', method: 'post') do %>
      <div class="form-group">
        <%= label_tag(:username, "Name") %>
        <%= text_field_tag(:username, "", class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label_tag(:password) %>
        <%= password_field_tag(:password, "", class: 'form-control') %>
      </div>
      <%= submit_tag 'Login', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>